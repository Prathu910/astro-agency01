---
import PricingCard from "./common/PricingCard.astro";
const pricingData = [
  {
    id: 1,
    title: "Student",
    price: "$20",
    link: "/contact",
    features: [
      {
        id: 1,
        feature: "One account",
      },
      {
        id: 2,
        feature: "Unlimited Projects",
      },
      {
        id: 3,
        feature: "Download prototypes",
      },
    ],
  },
  {
    id: 2,
    title: "Personal",
    price: "$39",
    link: "/contact",
    features: [
      {
        id: 1,
        feature: "One account",
      },
      {
        id: 2,
        feature: "Unlimited Projects",
      },
      {
        id: 3,
        feature: "Download prototypes",
      },
    ],
  },
  {
    id: 3,
    title: "Family",
    price: "$60",
    link: "/contact",
    features: [
      {
        id: 1,
        feature: "One account",
      },
      {
        id: 2,
        feature: "Unlimited Projects",
      },
      {
        id: 3,
        feature: "Download prototypes",
      },
    ],
  },
];

const { pricesData } = Astro.props;

const { parentClass } = Astro.props;
---

<div class={`pricing-area pt-100 section-bg ${parentClass}`}>
  <div class="section-title-center">
    <div class="width">
      <div class="sub-t">Best Pricing Plans</div>
      <h2>Our Pricing Plans</h2>
    </div>
  </div>
  <div class="container">
    <div class="row justify-content-center">
      {
        pricesData.map(
          ({ data: { points, link, price, title, type } }, idx) => (
            <PricingCard
              id={idx}
              features={points}
              link={link}
              price={price}
              title={title}
              type={type}
            />
          )
        )
      }
    </div>
  </div>
</div>
